<div class="page-header">
  <h1><%= "#{@movieproduct.movie.title} (#{@movieproduct.category.name})" %><small class="pull-right"><%= number_to_currency(@movieproduct.price) %></small></h1>
</div>
<div class="row">
  <div class="col-md-6">
    <% if @movieproduct.image_path %>
        <%= image_tag @movieproduct.image_path, :alt => 'image', :class => 'img-responsive' %>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Product Details</h3>
      </div>
      <div class="panel-body">
        <%= @movieproduct.description %>
      </div>
      <table class="table table-striped table-hover">
        <tbody>
            <tr>
              <td>Format</td>
              <td><%= @movieproduct.category.name %></td>
            </tr>
            <tr>
              <td>Year</td>
              <td><%= @movieproduct.movie.year %></td>
            </tr>
            <tr>
              <td>Rating</td>
              <td><%= @movieproduct.movie.rating %></td>
            </tr>
            <tr>
              <td>Runtime</td>
              <td><%= @movieproduct.movie.runtime %></td>
            </tr>
            <tr>
              <td>Genre</td>
              <td><%= @movieproduct.movie.genre %></td>
            </tr>
        </tbody>
      </table>
    </div>
    <%= render :partial => 'shared/cartbutton', :locals => {:movieproduct => @movieproduct} %>
  </div>
</div>
<footer>
  <p class="pull-right"><a href="#">Back to top</a></p>
  <p>&copy; 2013 Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
</footer>